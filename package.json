{
  "name": "armada",
  "version": "0.0.1",
  "description": "Serverless microservices",
  "main": "index.js",
  "scripts": {
    "c": "git-cz",
    "l": "pretty-quick && eslint '*/**/*.ts'",
    "create": "serverless create --template aws-nodejs-typescript --path ./services/$NAME --name $NAME",
    "deploy": "serverless deploy",
    "invoke": "serverless invoke",
    "logs": "serverless logs",
    "remove": "serverless remove",
    "start": "serverless offline start",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g-six/armada.git"
  },
  "author": "g-six",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/g-six/armada/issues"
  },
  "homepage": "https://github.com/g-six/armada#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.1.0",
    "@types/aws-lambda": "^8.10.31",
    "@types/jest": "^24.0.17",
    "@types/joi": "^14.3.3",
    "@types/lodash": "^4.14.136",
    "@types/massive": "^5.4.3",
    "@types/node": "^12.7.1",
    "@types/redis": "^2.8.13",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "commitlint": "^8.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "git-cz": "^3.2.1",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "serverless": "^1.49.0",
    "serverless-offline": "^5.10.1",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.5.3"
  },
  "lint-staged": {
    "*.(j|t)s": [
      "eslint --fix",
      "pretty-quick --fix",
      "git add"
    ]
  }
}
