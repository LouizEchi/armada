{
  "name": "armada",
  "version": "2.0.0",
  "description": "Serverless microservices",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "l": "eslint 'src/**/*.ts' --fix --quiet",
    "s:0": "rimraf ./src/services/$NAME",
    "s:1": "serverless create --template-path template --path ./src/services/$NAME/. --name $NAME",
    "s:2": "cd ./src/services/$NAME && npm i",
    "create": "npm run s:0 && npm run s:1 && npm run s:2",
    "create-user": "env $(cat .env) ts-node ./src/scripts/users/create.ts",
    "deploy": "cd ./src/services/$NAME && npm i && serverless deploy",
    "deploy:setup": "npm run deploy:1 && npm run deploy:2 && npm run deploy:3",
    "deploy:1": "cd ./src/services/$NAME && npm i",
    "deploy:2": "cd ./src/services/$NAME && npm run config",
    "deploy:3": "cd ./src/services/$NAME && npm run deploy",
    "invoke": "serverless invoke",
    "logs": "serverless logs",
    "remove": "cd ./src/services/$NAME && serverless remove && rimraf ./src/services/$NAME/node_modules",
    "start": "NODE_PORT=8888 ./node_modules/.bin/nodemon",
    "test": "rimraf coverage/* && jest --detectOpenHandles --maxWorkers=1",
    "coverage": "rimraf coverage/* && jest --coverage --config jest-coverage.config.js",
    "seed:categories": "env $(cat .env) ts-node ./src/scripts/categories/index.ts",
    "seed:subcategories": "env $(cat .env) ts-node ./src/scripts/subcategories/index.ts",
    "seed:all": "npm run seed:categories && npm run seed:subcategories"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g-six/armada.git"
  },
  "author": "g-six",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/g-six/armada/issues"
  },
  "homepage": "https://github.com/g-six/armada#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.2.0",
    "@types/aws-lambda": "^8.10.39",
    "@types/hapi__joi": "^16.0.4",
    "@types/jest": "^24.0.24",
    "@types/js-yaml": "^3.12.1",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/koa__cors": "^2.2.3",
    "@types/lodash": "^4.14.149",
    "@types/massive": "^5.4.3",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.12",
    "@types/node": "^12.12.21",
    "@types/redis": "^2.8.14",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "aws-sdk-mock": "^4.5.0",
    "commitlint": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "git-cz": "^3.3.0",
    "git-list-updated": "^1.2.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "massive": "^6.1.4",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "serverless": "^1.60.0",
    "serverless-domain-manager": "^3.3.0",
    "serverless-offline": "^5.12.1",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.3"
  },
  "lint-staged": {
    "*.(j|t)s": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@g-six/kastle-router": "^0.1.6",
    "@g-six/swiss-knife": "^0.1.9",
    "@hapi/joi": "^16.1.8",
    "@koa/cors": "^3.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/uuid": "^3.4.6",
    "aws-sdk": "^2.594.0",
    "axios": "^0.19.0",
    "js-yaml": "^3.13.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.15",
    "mime-types": "^2.1.25",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27"
  }
}
