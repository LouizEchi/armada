{
  "name": "armada",
  "version": "2.0.1",
  "description": "Serverless microservices",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "l": "eslint 'src/**/*.ts' --fix --quiet",
    "s:0": "rimraf ./src/services/$NAME",
    "s:1": "serverless create --template-path template/default --path ./src/services/$NAME/. --name $NAME",
    "s:2": "cd ./src/services/$NAME && npm i",
    "s:g0": "rimraf ./src/graphql/$NAME",
    "s:g1": "serverless create --template-path template/graphql --path ./src/graphql/$NAME/. --name $NAME",
    "s:g2": "cd ./src/graphql/$NAME && npm i",
    "create": "npm run s:0 && npm run s:1 && npm run s:2",
    "create-user": "env $(cat .env) ts-node ./src/scripts/users/create.ts",
    "create:g": "npm run s:g0 && npm run s:g1 && npm run s:g2",
    "deploy": "cd ./src/services/$NAME && npm i && serverless deploy",
    "deploy:setup": "npm run deploy:1 && npm run deploy:2 && npm run deploy:3",
    "deploy:1": "cd ./src/services/$NAME && npm i",
    "deploy:2": "cd ./src/services/$NAME && npm run config",
    "deploy:3": "cd ./src/services/$NAME && npm run deploy",
    "deploy:g": "cd ./src/graphql/$NAME && npm i && serverless deploy",
    "deploy:g:setup": "npm run deploy:g:1 && npm run deploy:g:2 && npm run deploy:g:3",
    "deploy:g:1": "cd ./src/graphql/$NAME && npm i",
    "deploy:g:2": "cd ./src/graphql/$NAME && npm run config",
    "deploy:g:3": "cd ./src/graphql/$NAME && npm run deploy",
    "invoke": "serverless invoke",
    "logs": "serverless logs",
    "remove": "cd ./src/services/$NAME && serverless remove && rimraf ./src/services/$NAME/node_modules",
    "remove:g": "cd ./src/graphql/$NAME && serverless remove && rimraf ./src/graphql/$NAME/node_modules",
    "start": "NODE_PORT=8888 ./node_modules/.bin/nodemon",
    "test": "rimraf coverage/* && jest --detectOpenHandles --maxWorkers=1",
    "coverage": "rimraf coverage/* && jest --coverage --config jest-coverage.config.js",
    "seed:categories": "env $(cat .env) ts-node ./src/scripts/categories/index.ts",
    "seed:subcategories": "env $(cat .env) ts-node ./src/scripts/subcategories/index.ts",
    "seed:all": "npm run seed:categories && npm run seed:subcategories"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g-six/armada.git"
  },
  "author": "g-six",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/g-six/armada/issues"
  },
  "homepage": "https://github.com/g-six/armada#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@types/aws-lambda": "^8.10.40",
    "@types/hapi__joi": "^16.0.9",
    "@types/jest": "^25.1.1",
    "@types/js-yaml": "^3.12.2",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.0",
    "@types/koa__cors": "^3.0.1",
    "@types/lodash": "^4.14.149",
    "@types/massive": "^5.4.3",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.12",
    "@types/node": "^13.7.0",
    "@types/redis": "^2.8.14",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "aws-sdk-mock": "^5.0.0",
    "commitlint": "^8.3.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "git-cz": "^4.3.0",
    "git-list-updated": "^1.2.1",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "massive": "^6.1.4",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "serverless": "^1.62.0",
    "serverless-domain-manager": "^3.3.1",
    "serverless-offline": "^5.12.1",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5"
  },
  "lint-staged": {
    "*.(j|t)s": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@g-six/kastle-router": "^0.1.6",
    "@g-six/swiss-knife": "^0.1.9",
    "@hapi/joi": "^17.1.0",
    "@koa/cors": "^3.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/uuid": "^3.4.7",
    "aws-sdk": "^2.610.0",
    "axios": "^0.19.2",
    "js-yaml": "^3.13.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^8.0.6",
    "lodash": "^4.17.15",
    "mime-types": "^2.1.26",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27"
  }
}
