{
  "name": "armada",
  "version": "0.0.1",
  "description": "Serverless microservices",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "l": "pretty-quick && eslint 'src/**/*.ts' --fix",
    "s:0": "rimraf ./src/services/$NAME",
    "s:1": "serverless create --template-path template --path ./src/services/$NAME/. --name $NAME",
    "s:2": "cd ./src/services/$NAME && npm i",
    "create": "npm run s:0 && npm run s:1 && npm run s:2",
    "deploy": "cd ./src/services/$NAME && npm i && serverless deploy",
    "invoke": "serverless invoke",
    "logs": "serverless logs",
    "remove": "cd ./src/services/$NAME && serverless remove && rimraf ./src/services/$NAME/node_modules",
    "start": "NODE_PORT=8888 ./node_modules/.bin/nodemon",
    "test": "rimraf ../coverages/armada && jest",
    "coverage": "rimraf ../coverages/armada && jest --coverage --config jest-coverage.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g-six/armada.git"
  },
  "author": "g-six",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/g-six/armada/issues"
  },
  "homepage": "https://github.com/g-six/armada#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.1.0",
    "@types/aws-lambda": "^8.10.31",
    "@types/hapi__joi": "^15.0.4",
    "@types/jest": "^24.0.18",
    "@types/js-yaml": "^3.12.1",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/koa__cors": "^2.2.3",
    "@types/lodash": "^4.14.138",
    "@types/massive": "^5.4.3",
    "@types/node": "^12.7.4",
    "@types/redis": "^2.8.13",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "commitlint": "^8.1.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "git-cz": "^3.2.1",
    "git-list-updated": "^1.2.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "massive": "^6.0.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "serverless": "^1.51.0",
    "serverless-domain-manager": "^3.3.0",
    "serverless-offline": "^5.10.1",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.6.2"
  },
  "lint-staged": {
    "*.(j|t)s": [
      "eslint --fix",
      "pretty-quick --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@g-six/kastle-router": "^0.1.3",
    "@g-six/swiss-knife": "^0.1.2",
    "@hapi/joi": "^15.1.1",
    "@koa/cors": "^3.0.0",
    "axios": "^0.19.0",
    "js-yaml": "^3.13.1",
    "koa": "^2.8.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.15"
  }
}
